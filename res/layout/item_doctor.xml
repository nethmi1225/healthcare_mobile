<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:contentDescription="Doctor card">

        <!-- Doctor Avatar -->
        <ImageView
            android:id="@+id/doctorAvatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_doctor"
            android:contentDescription="Doctor profile picture"
            android:scaleType="centerCrop"
            android:background="@drawable/doctor_2" />

        <!-- Doctor Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/doctorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. Jane Smith"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#34495E" />

            <TextView
                android:id="@+id/doctorSpecialty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cardiologist"
                android:textSize="14sp"
                android:textColor="#7F8C8D" />
        </LinearLayout>

        <!-- Arrow Indicator -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_more"
            android:contentDescription="View doctor profile"
            app:tint="#34495E" />
    </LinearLayout>
</androidx.cardview.widget.CardView>